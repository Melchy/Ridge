<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>

        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <PackageId>Ridge</PackageId>
        <Authors>Michal Motyčka</Authors>
        <Product>Ridge</Product>
        <Company>Michal Motyčka</Company>
        <Description>Tool that alows strongly typed integration tests and subcutaneous razor tests.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/Melchy/Ridge</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Melchy/Ridge</RepositoryUrl>
        <PackageTags>Testing, integration, strongly typed, razor</PackageTags>
    </PropertyGroup>
    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Castle.Core" Version="4.2.1" />
        <PackageReference Include="Castle.Core.AsyncInterceptor" Version="1.7.0" />
        <PackageReference Include="CommonExtensionMethods" Version="1.1.1" />
        <PackageReference Include="FluentReflections" Version="1.3.3" />
        <PackageReference Include="JetBrains.Annotations" Version="2020.3.0" />
        <PackageReference Include="JsonNet.ContractResolvers" Version="1.1.0" />
        <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
        <PackageReference Include="Microsoft.AspNetCore.Mvc.RazorPages" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="3.1.4" />
        <PackageReference Include="System.Text.Json" Version="4.7.2" />
    </ItemGroup>

</Project>
